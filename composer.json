{
  "name"              : "valkyrja/valkyrja",
  "type"              : "project",
  "description"       : "The Valkyrja Framework.",
  "homepage"          : "http://www.valkyrja.io",
  "keywords"          : [
    "framework",
    "valkyrja"
  ],
  "license"           : "MIT",
  "authors"           : [
    {
      "name"  : "Melech Mizrachi",
      "email" : "melechmizrachi@valkyrja.io"
    }
  ],
  "require"           : {
    "php"              : ">=7.1",
    "league/flysystem" : "~1.0",
    "monolog/monolog"  : "~1.22"
  },
  "require-dev"       : {
    "fzaninotto/faker" : "~1.4",
    "mockery/mockery"  : "0.9.*",
    "phpunit/phpunit"  : "~6.1"
  },
  "autoload"          : {
    "psr-4" : {
      "Valkyrja\\"        : "src/Valkyrja",
      "Valkyrja\\Tests\\" : "tests"
    },
    "files" : [
      "src/Valkyrja/helpers.php"
    ]
  },
  "suggest"           : {
    "guzzlehttp/guzzle" : "Required for use with Valkyrja Client (^6.2).",
    "twig/twig"         : "Optional templating engine. Required if using TwigServiceProvider (^1.33).",
    "predis/predis"     : "Required for use with Redis Valkyrja Cache (^1.1)."
  },
  "minimum-stability" : "dev",
  "prefer-stable"     : true,
  "extra"             : {
    "branch-alias" : {
      "dev-master" : "0.1-dev"
    }
  }
}
