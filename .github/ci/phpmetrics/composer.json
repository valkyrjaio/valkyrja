{
  "name"              : "valkyrja/valkyrja",
  "type"              : "project",
  "description"       : "The Valkyrja Framework.",
  "homepage"          : "http://www.valkyrja.io",
  "keywords"          : [
    "framework",
    "valkyrja"
  ],
  "license"           : "MIT",
  "authors"           : [
    {
      "name"  : "Melech Mizrachi",
      "email" : "mel@valkyrja.io"
    }
  ],
  "require"           : {
    "php"          : ">=8.1",
    "ext-json"     : "*",
    "ext-mbstring" : "*"
  },
  "require-dev"       : {
    "phpmetrics/phpmetrics" : "^3.0.0rc8"
  },
  "autoload"          : {
    "psr-4" : {
      "Valkyrja\\" : "../../../src/Valkyrja"
    }
  },
  "autoload-dev"      : {
    "psr-4" : {
      "Valkyrja\\Tests\\" : "../../../tests"
    }
  },
  "suggest"           : {},
  "scripts"           : {},
  "minimum-stability" : "dev",
  "prefer-stable"     : true,
  "extra"             : {
    "branch-alias" : {
      "dev-master" : "2.x-dev"
    }
  },
  "config"            : {
    "allow-plugins" : {
      "php-http/discovery" : true
    }
  }
}
