{
  "require"           : {
    "php" : ">=8.4"
  },
  "require-dev"       : {
    "squizlabs/php_codesniffer" : "^4.0.1",
    "slevomat/coding-standard"  : "^8.26.0"
  },
  "scripts"           : {
    "check"    : "vendor/bin/phpcs --standard=./ruleset.xml ../../../src -n && vendor/bin/phpcs --standard=./ruleset.xml ../../../tests -n",
    "warnings" : "vendor/bin/phpcs --standard=./ruleset.xml ../../../src && vendor/bin/phpcs --standard=./ruleset.xml ../../../tests"
  },
  "minimum-stability" : "dev",
  "prefer-stable"     : true,
  "config"            : {
    "allow-plugins" : {
      "dealerdirect/phpcodesniffer-composer-installer" : true
    }
  }
}
